@model Volunteer


<div class="container">
    <h2>Volunteer Login</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })
        </div>
    }

    @if (TempData["RegistMessage"] != null)
    {
        <div class="alert-success">
            @TempData["RegistMessage"]
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Volunteer Name</label>
            <input type="text" asp-for="Name" class="form-control" required />

            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="text" asp-for="Password" class="form-control" required />

            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn">Sign in</button>
    </form>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: rgb(204, 255, 234);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 400px;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-size: 28px;
        color: #2C3E50;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 3px solid #28a745;
        display: inline-block;
        padding-bottom: 5px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        font-weight: 600;
        color: #333;
        font-size: 16px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        background: #28a745;
        color: white;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .text-danger {
        color: red;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 15px;
        border: 1px solid #c3e6cb;
    }
</style>

<script>
    setTimeout(function() {
        var successAlert = document.querySelector('.alert-success');
        if (successAlert) {
            successAlert.style.transition = "opacity 0.5s"; 
            successAlert.style.opacity = "0";
            setTimeout(() => successAlert.remove(), 500); 
        }
    }, 3000);
</script>