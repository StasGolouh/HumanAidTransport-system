@model ViewModel

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: rgb(204, 255, 234);
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 400px;
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        margin: 50px auto;
        text-align: center;
    }

    h2 {
        font-family: 'Poppins', sans-serif;
        font-size: 28px;
        color: #2C3E50;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 3px solid #28a745;
        display: inline-block;
        padding-bottom: 5px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        font-weight: 600;
        color: #333;
        font-size: 16px;
    }

    input, select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .btn {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        background: #28a745;
        color: white;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }
</style>

<div class="container">
    <h2>Login</h2>

    <form method="post">
        <div class="form-group">
            <label for="role"> Select a role</label>
            <select id="role" name="role" class="form-control" required>
                <option value="Carrier">Carrier</option>
                <option value="Volunteer">Volunteer</option>
            </select>
        </div>

        <div id="carrierFields" class="login-fields">
            <div class="form-group">
                <label for="Carrier.Name">Carrier's name</label>
                <input type="text" id="Carrier.Name" name="Carrier.Name" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="Carrier.Password">Password</label>
                <input type="password" id="Carrier.Password" name="Carrier.Password" class="form-control" required>
            </div>
        </div>

        <div id="volunteerFields" class="login-fields" style="display: none;">
            <div class="form-group">
                <label for="Volunteer.Username">Volunteer's name</label>
                <input type="text" id="Volunteer.Username" name="Volunteer.Username" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="Volunteer.Password">Password</label>
                <input type="password" id="Volunteer.Password" name="Volunteer.Password" class="form-control" required>
            </div>
        </div>

        <button type="submit" class="btn">Sign in</button>
    </form>
</div>

<script>
    document.getElementById('role').addEventListener('change', function () {
        const role = this.value;
        const carrierFields = document.getElementById('carrierFields');
        const volunteerFields = document.getElementById('volunteerFields');

        if (role === 'Carrier') {
            carrierFields.style.display = 'block';
            volunteerFields.style.display = 'none';
        }
        else if (role === 'Volunteer') {
            carrierFields.style.display = 'none';
            volunteerFields.style.display = 'block';
        }
    });
</script>
