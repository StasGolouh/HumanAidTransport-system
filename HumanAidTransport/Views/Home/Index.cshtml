@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="maintext">Welcome on AlwaysReady</h1>

    <img src="~/images/Aid.png" alt="Aid" class="mainimg" />


    <form asp-controller="Registration" asp-action="Registration" method="get" class="btn-container">
        <button type="submit" class="btn-registration">Registration</button>
    </form>

    <form asp-controller="Login" asp-action="Login" method="get" class="btn-container">
        <button type="submit" class="btn-login">Login</button>
    </form>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: rgb(204, 255, 234);
    }

        body::-webkit-scrollbar {
            display: none;
        }

    .btn-container {
        display: inline-block;
        margin: 10px;
        width: 48%;
    }

    button {
        width: 100%;
        padding: 15px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-registration {
        background-color: #28a745;
        color: white;
    }

        .btn-registration:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-login {
        background-color: #007bff;
        color: white;
    }

        .btn-login:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .text-center {
        font-family: 'Arial', sans-serif;
        color: chocolate;
    }

    .mainimg {
        width: 55%;
        height: 55%;
        justify-content: center;
        align-content: center;
        margin-left: 45px;
    }

    .maintext {
        font-family: 'Poppins', sans-serif;
        font-size: 32px;
        color: #2C3E50;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        border-bottom: 3px solid #28a745;
        display: inline-block;
        padding-bottom: 5px;
    }

</style>