@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="maintext">Welcome on AlwaysReady</h1>

    <img src="~/images/Aid.png" alt="Aid" class="mainimg" />


    <form id="roleForm" method="get" class="btn-container">
        <label for="role" style="font-size: 18px; color: #333;">Select your role:</label>
        <select id="role" name="role" style="padding: 10px; font-size: 16px; margin-bottom: 20px;">
            <option value="Volunteer">Volunteer</option>
            <option value="Carrier">Carrier</option>
        </select>
    </form>

    <form id="registerForm" method="get" class="btn-container">
        <button type="submit" class="btn-registration" id="registerButton">Registration</button>
    </form>

    <form id="loginForm" method="get" class="btn-container">
        <button type="submit" class="btn-login" id="loginButton">Login</button>
    </form>
</div>

<script>
    document.getElementById('registerButton').addEventListener('click', function(event) {
        event.preventDefault();
        const role = document.getElementById('role').value;
        let url = '';

        if (role === 'Volunteer') {
            url = '/Volunteer/VolunteerRegistration'; 
        } 
        
        else if (role === 'Carrier') {
            url = '/Carrier/CarrierRegistration'; 
        }

        // Переадресація на відповідну форму логіну
        window.location.href = url;
    });


    document.getElementById('loginButton').addEventListener('click', function(event) {
        event.preventDefault();
        const role = document.getElementById('role').value;
        let url = '';

        if (role === 'Volunteer') {
            url = '/Volunteer/VolunteerLogin';
        } 
        else if (role === 'Carrier') {
            url = '/Carrier/CarrierLogin'; 
        }

        window.location.href = url;
    });
</script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: rgb(204, 255, 234);
    }

        body::-webkit-scrollbar {
            display: none;
        }

    .btn-container {
        display: inline-block;
        margin: 10px;
        width: 48%;
    }

    button {
        width: 100%;
        padding: 12px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-registration {
        background-color: #28a745;
        color: white;
    }

        .btn-registration:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-login {
        background-color: #007bff;
        color: white;
    }

        .btn-login:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .text-center {
        font-family: 'Arial', sans-serif;
        color: chocolate;
    }

    .mainimg {
        width: 51%;
        height: 51%;
        justify-content: center;
        align-content: center;
        margin-left: 45px;
    }

    .maintext {
        font-family: 'Poppins', sans-serif;
        font-size: 32px;
        color: #2C3E50;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 20px;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        border-bottom: 3px solid #28a745;
        display: inline-block;
        padding-bottom: 5px;
    }
</style>
