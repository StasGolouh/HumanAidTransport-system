@model IEnumerable<TransportOrder>

@{
    ViewData["Title"] = "Carrier Order List";
}

@if (TempData["CompleteMessage"] != null)
{
    <div class="alert success-alert" id="success-alert">@TempData["CompleteMessage"]</div>
}

@if (TempData["CancelMessage"] != null)
{
    <div class="alert error-alert" id="error-alert">@TempData["CancelMessage"]</div>
}

@if (TempData["ProgressMessage"] != null)
{
    <div class="alert progress-alert" id="progress-alert">@TempData["ProgressMessage"]</div>
}

<h2 class="title">@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order №</th>
                <th>Task Name</th>
                <th>From</th>
                <th>To</th>
                <th>Payment ($)</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr class="@(order.Status == "Completed" ? "task-completed" : order.Status == "Canceled" ? "task-rejected" : order.Status == "New" ? "task-new" : "task-pending")">
                    <td>@order.OrderId</td>
                    <td>@order.Name</td>
                    <td>@order.DeliveryAddressFrom</td>
                    <td>@order.DeliveryAddressTo</td>
                    <td>@order.Payment</td>
                    <td class="status-column">
                        <span class="@(order.Status == "Completed" ? "status-completed" : order.Status == "Canceled" ? "status-rejected" : order.Status == "New" ? "status-new" : "status-pending")">@order.Status</span>
                    </td>
                    <td>
                        @if (order.Status == "New")
                        {
                            <div class="task-card new">
                                <form method="post" asp-controller="OrderTask" asp-action="MarkAsInProgress" asp-route-orderId="@order.OrderId">
                                    <button type="submit" class="btn in-progress-btn">🔄 Mark as In Progress</button>
                                </form>
                                <form method="post" asp-controller="OrderTask" asp-action="CancelTask" asp-route-orderId="@order.OrderId">
                                    <button type="submit" class="btn cancel-btn">✖ Refuse</button>
                                </form>
                            </div>
                        }
                        @if (order.Status == "In progress")
                        {
                            <div class="task-card in-progress task-buttons">
                                <form method="post" asp-controller="OrderTask" asp-action="MarkAsCompleted" asp-route-orderId="@order.OrderId">
                                    <button type="submit" class="btn complete-btn">✔ Complete Task</button>
                                </form>
                                <form method="post" asp-controller="OrderTask" asp-action="CancelTask" asp-route-orderId="@order.OrderId">
                                    <button type="submit" class="btn cancel-btn">✖ Reject</button>
                                </form>
                            </div>
                        }
                        @if (order.Status == "Completed" || order.Status == "Canceled")
                        {
                            <div class="task-card completed">
                                <form method="post" asp-action="DeleteTask" asp-route-orderId="@order.OrderId" asp-controller="OrderTask">
                                    <button type="submit" class="btn delete-btn" title="Delete Task">🗑️</button>
                                </form>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-requests">No transport orders available for this carrier.</p>
}

<style>
    .task-new {
        background-color: #ecf8ff;
        border-left: 5px solid #3498db;
    }

    .task-pending {
        background-color: #fff3cd;
        border-left: 5px solid #ffc107;
    }

    .task-completed {
        background-color: #d4edda;
        border-left: 5px solid #28a745;
    }

    .task-rejected {
        background-color: #f8d7da;
        border-left: 5px solid #dc3545;
    }

    .status-new, .status-pending, .status-completed, .status-rejected {
        font-weight: bold;
        padding: 2px 5px;
        border-radius: 5px;
    }

    .status-new {
        color: #3498db;
        background-color: #d5e9f7;
    }

    .status-pending {
        color: #ffc107;
        background-color: #fff4b2;
    }

    .status-completed {
        color: #28a745;
        background-color: #d5f8e4;
    }

    .status-rejected {
        color: #dc3545;
        background-color: #f5c6cb;
    }

    .task-buttons {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 12px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

    .in-progress-btn {
        background-color: #f39c12;
        color: white;
    }

        .in-progress-btn:hover {
            background-color: #e67e22;
            transform: translateY(-2px);
        }

    .complete-btn {
        background-color: #28a745;
        color: white;
    }

        .complete-btn:hover {
            background-color: #218838;
        }

    .cancel-btn {
        background-color: #dc3545;
        color: white;
    }

        .cancel-btn:hover {
            background-color: #c82333;
        }

    .delete-btn {
        background-color: orange;
        color: white;
    }

        .delete-btn:hover {
            background-color: yellow;
        }

    .no-requests {
        text-align: center;
        font-size: 18px;
        color: #666;
        margin-top: 20px;
    }

    .alert-container {
        margin-bottom: 20px;
    }

    .alert-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        border-radius: 8px;
    }

    .success-alert {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .error-alert {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .progress-alert {
        background-color: yellow;
        border: 1px solid #f5c6cb;
    }

    .alert-table td {
        padding: 12px;
        text-align: center;
        font-weight: bold;
    }
</style>

<script>
    setTimeout(function() {
        var successAlert = document.querySelector('.success-alert');
        if (successAlert) {
            successAlert.style.display = 'none';
        }

        var errorAlert = document.querySelector('.error-alert');
        if (errorAlert) {
            errorAlert.style.display = 'none';
        }

        var progressAlert = document.querySelector('.progress-alert');
        if (progressAlert) {
            progressAlert.style.display = 'none';
        }
    }, 3000);
</script>