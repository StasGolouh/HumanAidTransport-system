@model IEnumerable<DeliveryRequest> // Колекція заявок на доставку

@{
    ViewData["Title"] = "Volunteer Request List";
}

@if (TempData["AcceptMessage"] != null)
{
    <div class="alert success-alert" id="success-alert">@TempData["AcceptMessage"]</div>
}

@if (TempData["RejectMessage"] != null)
{
    <div class="alert error-alert" id="error-alert">@TempData["RejectMessage"]</div>
}

<h2 class="title">@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Request №</th>
                <th>Carrier Name</th>
                <th>Carrier Contacts</th>
                <th>Carrier Rating</th>
                <th>Vehicle Name</th>
                <th>Vehicle Model</th>
                <th>Vehicle Number</th>
                <th>Humanitarian Aid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.DeliveryRequestId</td>
                    <td>@request.Carrier?.Name</td>
                    <td>@request.CarrierContacts</td>
                    <td>@request.CarrierRating</td>
                    <td>@request.VehicleName</td>
                    <td>@request.VehicleModel</td>
                    <td>@request.VehicleNumber</td>
                    <td>@request.HumanAidName</td>
                    <td>
                        <form method="post" asp-action="AcceptRequest" asp-controller="DeliveryRequest" asp-route-deliveryRequestId="@request.DeliveryRequestId" asp-route-volunteerId="@request.VolunteerId">
                            <button type="submit" class="btn accept-btn">✔Accept</button>
                        </form>

                        <form method="post" asp-action="RejectRequest" asp-controller="DeliveryRequest" asp-route-deliveryRequestId="@request.DeliveryRequestId" asp-route-volunteerId="@request.VolunteerId">
                            <button type="submit" class="btn reject-btn">✖Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-requests">No delivery requests available for this volunteer.</p>
}

<style>
    body {
        background-color: white;
        color: #2d572c;
        font-family: Arial, sans-serif;
    }

    .title {
        text-align: center;
        color: #2d572c;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #2d572c;
            padding: 10px;
            text-align: left;
        }

        .table th {
            background-color: #2d572c;
            color: white;
        }

    .btn {
        padding: 10px 15px;
        border-radius: 8px;
        border: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.2s;
        cursor: pointer;
        margin-bottom: 15px;
        display: inline-block;
        text-align: center;
    }

    .accept-btn {
        background-color: #28a745;
        color: white;
    }

        .accept-btn:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .reject-btn {
        background-color: #dc3545;
        color: white;
    }

        .reject-btn:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

    .no-requests {
        text-align: center;
        font-size: 18px;
        margin-top: 20px;
    }

    .alert {
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
    }

    .success-alert {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .error-alert {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<script>
    setTimeout(function() {
        var successAlert = document.getElementById('success-alert');
        if (successAlert) {
            successAlert.style.display = 'none';
        }

        var errorAlert = document.getElementById('error-alert');
        if (errorAlert) {
            errorAlert.style.display = 'none';
        }
    }, 3000);
</script>
