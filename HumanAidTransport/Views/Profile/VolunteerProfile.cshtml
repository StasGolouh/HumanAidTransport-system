@model Volunteer

@{
    ViewData["Title"] = "Profile Page";
}

<div class="profile-container">
    <div class="profile-sidebar">
        <img src="default-avatar.png" alt="Profile photo" class="profile-pic" id="profilePic">
        <input type="file" id="uploadPic" hidden>
        <label for="uploadPic" class="upload-btn">Change photo</label>
        <h2>@Model.Name</h2>
        <div class="sidebar-buttons">
            <button class="btn-notf"><img src="~/images/notification.png" alt="Notification"></button>
            <button class="btn-chat"><img src="~/images/chat.png" alt="Chat"></button>
        </div>
    </div>

    <div class="profile-content">
        <div class="task-section">
            <div class="tasks-list">
                <h3>Your tasks</h3>
                <div class="scrollable-tasks">
                    <ul>
                        <li class="task-item">Завдання 1: Опис завдання...</li>
                        <li class="task-item">Завдання 2: Опис завдання...</li>
                        <li class="task-item">Завдання 3: Опис завдання...</li>
                        <li class="task-item">Завдання 4: Опис завдання...</li>
                        <li class="task-item">Завдання 5: Опис завдання...</li>
                        <li class="task-item">Завдання 6: Опис завдання...</li>
                        <li class="task-item">Завдання 7: Опис завдання...</li>
                        <li class="task-item">Завдання 8: Опис завдання...</li>
                        <li class="task-item">Завдання 9: Опис завдання...</li>
                        <li class="task-item">Завдання 10: Опис завдання...</li>
                    </ul>
                </div>
            </div>
            <form asp-action="PostTask" method="post">
                <button type="submit" class="btn">Publish</button>
            </form>
        </div>
    </div>
</div>

<style>

    .tasks-list {
        margin-top: 20px;
        overflow: hidden;
    }

    .scrollable-tasks {
        max-height: 300px;
        overflow-y: auto;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 8px;
    }

    .task-item {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

        .task-item:last-child {
            border-bottom: none;
        }

    /* Загальні стилі */
    body {
        font-family: 'Arial', sans-serif;
        background-color: rgb(204, 255, 234);
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .profile-container {
        display: flex;
        justify-content: space-between;
        flex: 1;
        padding: 20px;
        height: 100vh;
    }

    .profile-sidebar {
        width: 25%;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .profile-content {
        width: 70%;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        flex: 1;
    }

    .sidebar-buttons {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    /* Стилі для кнопок */
    .btn-chat,
    .btn-notf {
        background: none;
        border: none;
        cursor: pointer;
        padding: 10px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .btn-chat {
        width: 80px;
        height: 80px;
    }

    .btn-notf {
        width: 100px;
        height: 100px;
    }

        .btn-chat img,
        .btn-notf img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .btn-chat:hover,
        .btn-notf:hover {
            background-color: #e9ecef;
        }

    /* Стилі для форми та кнопки Publish */
    form {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .btn {
        width: auto; /* Автоматична ширина, щоб кнопка відповідала вмісту */
        padding: 12px;
        font-size: 18px;
        border-radius: 8px;
        border: none;
        background: #28a745;
        color: white;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

</style>
