@model Volunteer

@{
    ViewData["Title"] = "Profile Page";
}

<div class="profile-container">
    <div class="profile-sidebar">
        <img src="@Model.ProfilePhotoURL" alt="Profile photo" class="profile-pic">
        <input type="file" id="uploadPic" hidden>
        <label for="uploadPic" class="upload-btn">Change photo</label>
        <h2>@Model.Name</h2>
        <div class="sidebar-buttons">
            <button class="btn-notf"><img src="~/images/notification.png" alt="Notification"></button>
            <button class="btn-chat"><img src="~/images/chat.png" alt="Chat"></button>
        </div>
    </div>

    <div class="profile-content">
        <div class="task-section">
            <div class="tasks-list">
                <h3>Your tasks</h3>
                <div class="scrollable-tasks">
                    <ul id="taskList">
                        @foreach (var task in Model.Tasks)
                        {
                            <li class="task-item">@task.Name: @task.Description</li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Кнопка для відкриття модального вікна -->
            <button type="button" class="btn" onclick="openModal()">Publish</button>
        </div>
    </div>
</div>

<!-- Модальне вікно -->
<div id="taskModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <h2>Enter Task Details</h2>
        <form id="taskForm" method="post" asp-action="PostTask">
            <label>Name:</label>
            <input type="text" name="Name" required>

            <label>Quantity:</label>
            <input type="number" name="Quantity" min="1" required>

            <label>Delivery From:</label>
            <input type="text" name="DeliveryAddressFrom" required>

            <label>Delivery To:</label>
            <input type="text" name="DeliveryAddressTo" required>

            <label>Payment:</label>
            <input type="number" name="Payment" min="0">

            <label>Expected Delivery Time:</label>
            <input type="datetime-local" name="ExpectedDeliveryTime">

            <label>Description (optional):</label>
            <textarea name="Description" rows="3"></textarea>

            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>

<style>
    /* Стилі модального вікна */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 400px;
        position: relative;
    }

    .close {
        position: absolute;
        top: 10px;
        right: 15px;
        font-size: 24px;
        cursor: pointer;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .btn {
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #218838;
        }
</style>

<script>
    function openModal() {
        document.getElementById("taskModal").style.display = "flex";
    }

    function closeModal() {
        document.getElementById("taskModal").style.display = "none";
    }
</script>