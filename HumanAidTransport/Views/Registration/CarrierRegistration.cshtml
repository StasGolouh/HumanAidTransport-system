@model Carrier

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/registration/carrregistration.css" asp-append-version="true" />
</head>
<body>

<div class="container">
    <h1>Carrier Registration</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(true, "Please fix the following errors:", new { @class = "text-danger" })
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Carrier's name</label>
            <input type="text" asp-for="Name" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="text" asp-for="Password" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Contacts">Contacts</label>
            <input type="text" asp-for="Contacts" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Contacts, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleName">Car's name</label>
            <input type="text" asp-for="VehicleName" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleModel">Car's model</label>
            <input type="text" asp-for="VehicleModel" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleModel, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleNumber">Car's number</label>
            <input type="text" asp-for="VehicleNumber" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Capacity">Carrying capacity (kg)</label>
            <input type="number" asp-for="Capacity" class="form-control" min="0" max="10000" required />
            @Html.ValidationMessageFor(m => m.Capacity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Dimensions">Dimensions (L x W x H)</label>
            <input type="text" asp-for="Dimensions" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Dimensions, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn">Sign up</button>
    </form>
</div>
</body>
</html>