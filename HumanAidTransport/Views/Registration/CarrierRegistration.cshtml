@model Carrier

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/registration/carrregistration.css" asp-append-version="true" />
</head>
<body>

<div class="container">
    <h1>Реєстрація перевізника</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
           @Html.ValidationSummary(true, "Виправте наступні помилки:", new { @class = "text-danger" })
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Ім'я Перевізника</label>
            <input type="text" asp-for="Name" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input type="text" asp-for="Password" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Contacts">Номер телефону</label>
            <input type="text" asp-for="Contacts" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Contacts, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleName">Назва авто</label>
            <input type="text" asp-for="VehicleName" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleModel">Модель авто</label>
            <input type="text" asp-for="VehicleModel" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleModel, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="VehicleNumber">Номер авто</label>
            <input type="text" asp-for="VehicleNumber" class="form-control" required />
            @Html.ValidationMessageFor(m => m.VehicleNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Capacity">Вантажопідйомність (кг)</label>
            <input type="number" asp-for="Capacity" class="form-control" min="0" max="10000" required />
            @Html.ValidationMessageFor(m => m.Capacity, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label asp-for="Dimensions">Розміри (Д x Ш x В)</label>
            <input type="text" asp-for="Dimensions" class="form-control" required />
            @Html.ValidationMessageFor(m => m.Dimensions, "", new { @class = "text-danger" })
        </div>

            <div class="form-group">
                <label asp-for="CardNumber">Номер картки</label>
                <input type="text" asp-for="CardNumber" class="form-control" maxlength="16" minlength="16" pattern="\d{16}" required />
                @Html.ValidationMessageFor(m => m.CardNumber, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="CVV">CVV</label>
                <input type="text" asp-for="CVV" class="form-control" maxlength="3" minlength="3" pattern="\d{3}" required />
                @Html.ValidationMessageFor(m => m.CVV, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="Balance">Баланс (грн)</label>
                <input type="number" asp-for="Balance" class="form-control" min="0" step="0.01" required />
                @Html.ValidationMessageFor(m => m.Balance, "", new { @class = "text-danger" })
            </div>

        <button type="submit" class="btn">Зареєструватися</button>
    </form>
</div>
</body>
</html>